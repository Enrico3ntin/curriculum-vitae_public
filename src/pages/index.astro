---
import { getEntry } from 'astro:content';
import Printable from '../layouts/printable.astro';
import Intro from '../components/intro.astro';
import Jobs from '../components/jobs.astro';
import Studies from '../components/studies.astro';
const meta = await getEntry('meta', 'index');
const { language, title, keywords } = meta!.data;
---
<Printable title={title} keywords={keywords.join(', ')} language={language}>
    <Intro/>
    <Jobs/>
    <Studies/>
</Printable>
<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,100..900&display=swap');
    :root {
        --smaller-size: 0.500rem;
        --small-size:   0.750rem;
        --base-size:    1.000rem;
        --large-size:   1.500rem;
        --larger-size:  3.000rem;
        --largest-size: 4.500rem;
    }

    html { font-family: Inter; font-size: 11.5px; text-align: left; font-weight: 300; }
    main { display: flex; flex-direction: column; gap: var(--larger-size); }
    section { display: flex; flex-direction: column; gap: var(--large-size); }
    article { display: flex; flex-direction: column; gap: var(--small-size); page-break-inside: avoid; }
    ul { margin: 0; padding: 0 0 0 2ch; display: flex; flex-direction: column; gap: 0; }
    h1 { margin: 0; padding: 0; font-size: var(--larger-size); line-height: var(--larger-size); font-weight: 700; }
    h2 { margin: 0; padding: 0; font-size: var(--large-size); line-height: var(--large-size); font-weight: 700; text-transform: uppercase; }
    h3 { margin: 0; padding: 0; font-size: var(--base-size); line-height: var(--base-size); font-weight: 700; }
    a, p, li { margin: 0; padding: 0; font-size: var(--base-size); line-height: var(--large-size); }
    a { color: inherit; text-decoration: inherit; font-size: inherit; }

</style>
